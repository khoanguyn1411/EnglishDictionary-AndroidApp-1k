<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnhVietFragment">

    <ImageView
        android:id="@+id/imgMeaning"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/meaning" />

    <TextView
        android:id="@+id/txtAnswer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="23dp"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        app:layout_constraintBottom_toBottomOf="@+id/imgMeaning"
        app:layout_constraintEnd_toEndOf="@+id/imgMeaning"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/imgMeaning"
        app:layout_constraintTop_toBottomOf="@+id/txtPhatAm" />

    <TextView
        android:id="@+id/txtPhatAm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/nunito_italic"
        android:textColor="@color/XanhNhat1"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imgMeaning"
        app:layout_constraintTop_toBottomOf="@+id/txtWord" />

    <TextView
        android:id="@+id/txtWord"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="200dp"
        android:fontFamily="@font/nunito_extrabold"
        android:maxLines="2"
        android:textColor="@color/XanhDam"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgMeaning"
        app:layout_constraintEnd_toEndOf="@+id/imgMeaning"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtAnswer"
        app:layout_constraintTop_toTopOf="@+id/imgMeaning"
        app:layout_constraintVertical_bias="0.04" />

    <ImageView
        android:id="@+id/imgPhienAm"
        android:layout_width="28dp"
        android:layout_height="34dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/txtAnswer"
        app:layout_constraintEnd_toEndOf="@+id/txtAnswer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtWord"
        app:layout_constraintTop_toTopOf="@+id/imgMeaning"
        app:srcCompat="@drawable/phatam" />

    <ImageView
        android:id="@+id/imgTimDetailBoTim"
        android:layout_width="29dp"
        android:layout_height="32dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="220dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/txtAnswer"
        app:layout_constraintEnd_toEndOf="@+id/imgMeaning"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgPhienAm"
        app:layout_constraintTop_toTopOf="@+id/imgMeaning"
        app:layout_constraintVertical_bias="0.50"
        app:srcCompat="@drawable/timfill" />

    <ImageView
        android:id="@+id/imgTimDetail"
        android:layout_width="29dp"
        android:layout_height="32dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="220dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/txtAnswer"
        app:layout_constraintEnd_toEndOf="@+id/imgMeaning"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgPhienAm"
        app:layout_constraintTop_toTopOf="@+id/imgMeaning"
        app:layout_constraintVertical_bias="0.50"
        app:srcCompat="@drawable/timstroke" />


</androidx.constraintlayout.widget.ConstraintLayout>